{% if 'inpost_point' in form.vars.value %}
    {% set wrapperId = "#{ form.vars.id }_details" %}
    <div class="bb-inpost-point" data-bb-target="inpost-geowidget">
        {% include "@BitBagSyliusInPostPlugin/InPostGeowidgetPreview.html.twig" %}
        <button
            data-bb-event="select-inpost-point"
            data-bb-path="{{ path('bitbag_sylius_inpost_plugin_shop_add_point_to_order') }}"
            data-bb-target="#{{ wrapperId }}"
            class="bb-inpost-point-btn"
        >
            {{ 'bitbag_sylius_inpost_plugin.ui.select_point'|trans }}
        </button>
    </div>
{% endif %}
